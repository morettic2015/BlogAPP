<?xml version='1.0' encoding='utf-8'?>
<widget id="br.com.morettic.startup.BlogAPP" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0" xmlns:cocoon="http://cocoon.io/ns/1.0">
    <name>BlogAPP</name>
    <description>
      Morettic Startup BlogAPP
    </description>
    <author email="projetos@morettic.com.br" href="https://morettic.com.br/">
        Tecnologia + Inovação = Experiências Digitais
    </author>
    <preference name="Orientation" value="portrait" />
    <preference name="Fullscreen" value="true" />
    <preference name="FadeSplashScreenDuration" value="750" />
    <preference name="SplashScreenDelay" value="4000" />
    <icon platform="android" src="www/img/logo.png" />
    <allow-navigation href="http://*/*" />
    <allow-navigation href="https://*/*" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
        <splash density="port-hdpi" src="www/img/splash3.png" />
        <splash density="port-ldpi" src="www/img/splash2.png" />
        <splash density="port-mdpi" src="www/img/splash1.png" />
        <splash density="port-xhdpi" src="www/img/splash0.png" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    <engine name="android" spec="~6.2.3" />
    <plugin name="cordova-plugin-dialogs" spec="~1.3.3" />
    <plugin name="cordova-plugin-network-information" spec="~1.3.3" />
    <plugin name="cordova-plugin-splashscreen" spec="^4.0.3" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
</widget>
